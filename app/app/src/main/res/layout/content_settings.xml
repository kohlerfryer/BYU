<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fryer.kohler.familymapapp.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/life_Story_lines"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Life Story Lines"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Spinner
                android:id="@+id/life_story_lines_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/life_story_lines_switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/family_tree_lines"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Family Tree Lines"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Spinner
                android:id="@+id/family_tree_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/family_tree_lines_switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spouse_lines"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="spouse Lines"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Spinner
                android:id="@+id/spouse_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <Switch
                android:id="@+id/spouse_lines_switch"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/map_type"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Map Type"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <Spinner
                android:id="@+id/map_type_spinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resync_data_text_view"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Resync Data"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />


        </LinearLayout>

        <TextView
            android:id="@+id/logout_text_view"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
